<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.93"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/btn_upload_image"
            android:textSize="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="SELECT"
            android:id="@+id/iv_upload_image"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btn_upload_image"
            android:layout_alignStart="@+id/btn_upload_image"
            android:layout_alignRight="@+id/btn_upload_image"
            android:layout_alignEnd="@+id/btn_upload_image"
            android:layout_gravity="center_vertical"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:text="서버와 JSON 통신 테스트"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/txtView"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_upload_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:background="#000000"
        android:contentDescription=""
        android:layout_alignLeft="@+id/iv_upload_image"
        android:layout_alignStart="@+id/iv_upload_image"
        android:layout_alignRight="@+id/iv_upload_image"
        android:layout_alignEnd="@+id/iv_upload_image"
        android:layout_weight="0.17"
        android:layout_gravity="center_horizontal" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="현재 위치"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="위도"
        android:id="@+id/txtLat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="경도"
        android:id="@+id/txtLon" />
</LinearLayout>
